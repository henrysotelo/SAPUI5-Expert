<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
        <Panel>
               <Button id="btnShowCity" 
                       text="{i18n>showCity}"
                       visible="{jsonModeConfig>/visibleBtnShowCity}"
                       press="onShowCity"/>
               <Button id="btnHideCity" 
                       text="{i18n>hideCity}"
                       visible="{jsonModeConfig>/visibleBtnHideCity}"
                       press="onHideCity"/>
               <Table id="tableEmployees" items="{jsonEmployees>/}">
                   <columns>
                     <Column visible="{jsonModeConfig>/visibleId}">
                       <header>
                           <Label text="{i18n>tableId}"></Label>
                       </header>
                    </Column>
                     <Column visible="{jsonModeConfig>/visibleName}">
                       <header>
                           <Label text="{i18n>tableName}"></Label>
                       </header>
                    </Column>
                     <Column visible="{jsonModeConfig>/visibleCountry}">
                       <header>
                           <Label text="{i18n>tableCountry}"></Label>
                       </header>
                    </Column>
                     <Column visible="{jsonModeConfig>/visibleCity}">
                       <header>
                           <Label text="{i18n>tableCity}"></Label>
                       </header>
                    </Column>
                    <Column width="100px">
                       <header>
                           <Label text="{i18n>tableShowDetails}"></Label>
                       </header>
                    </Column>
                   </columns>
                    <items>
                       <ColumnListItem type="Navigation" press="showEmployes">
                           <cells>
                               <Label text="{jsonEmployees>EmployeeID}"/>
                               <Label text="{jsonEmployees>LastName} {jsonEmployees>FirstName}"/>
                               <Label text="{jsonEmployees>Country}"/>
                               <Label text="{jsonEmployees>City}"/>
                               <core:Icon src="sap-icon://show" press="onShowOrders"/>
                           </cells>
                       </ColumnListItem>
                   </items>
               </Table>
           <HBox id="ordersTable"></HBox>
       </Panel>
</core:FragmentDefinition>