<mvc:View
    controllerName="logaligroup.employees.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <HBox id="_IDGenHBox1">
                            <Label id="labelEmployees" 
                                   labelFor="inputEmployees" 
                                   text="{i18n>labelEmployees}"
                                   class="sapUiSmallMargin"/>
                            <Input id="inputEmployee" value="{jsonCountry>/EmployeeId}"
                                   maxLength="6" 
                                   width="200px"
                                   class="sapUiSmallMarginEnd"
                                   />
                            <Label id="labelCountry" 
                                   labelFor="slCountry" 
                                   text="{i18n>labelCountry}"
                                   class="sapUiSmallMargin"
                                   visible="false"/>
                            <Select id="slCountry"
                                   selectedKey="{jsonCountry>/CountryKey}"
                                   items="{jsonCountry>/ListCountry}"
                                   forceSelection="false"
                                   visible="true">
                            <items>
                                <core:Item id="_IDGenItem1" key="{jsonCountry>Key}" text="{jsonCountry>Text}" />
                            </items>
                        </Select>
                        <Button id="btnFilter" 
                                text="{i18n>btnFilter}"
                                icon="sap-icon://search" 
                                press="onFilter"
                                class="sapUiSmallMarginEnd"/>
                        <Button id="btnClearFilter" 
                                text="{i18n>btnClearFilter}"
                                icon="sap-icon://clear-filter"
                                press="onClearFilter"
                                class="sapUiSmallMarginEnd"/>
                        </HBox>
                        <HBox>
                            <Panel>
                            <Button id="btnShowCity" 
                                    text="{i18n>showCity}"
                                    visible="{jsonModeConfig>/visibleBtnShowCity}"
                                    press="onShowCity"/>
                            <Button id="btnHideCity" 
                                    text="{i18n>hideCity}"
                                    visible="{jsonModeConfig>/visibleBtnHideCity}"
                                    press="onHideCity"/>
                                <Table id="tableEmployees" items="{jsonEmployees>/}">
                                    <columns>
                                      <Column visible="{jsonModeConfig>/visibleId}">
                                        <header>
                                            <Label text="{i18n>tableId}"></Label>
                                        </header>
                                     </Column>
                                      <Column visible="{jsonModeConfig>/visibleName}">
                                        <header>
                                            <Label text="{i18n>tableName}"></Label>
                                        </header>
                                     </Column>
                                      <Column visible="{jsonModeConfig>/visibleCountry}">
                                        <header>
                                            <Label text="{i18n>tableCountry}"></Label>
                                        </header>
                                     </Column>
                                      <Column visible="{jsonModeConfig>/visibleCity}">
                                        <header>
                                            <Label text="{i18n>tableCity}"></Label>
                                        </header>
                                     </Column>
                                    </columns>
                                     <items>
                                        <ColumnListItem type="Active" press="showPostalCode">
                                            <cells>
                                                <Label text="{jsonEmployees>EmployeeID}"/>
                                                <Label text="{jsonEmployees>LastName} {jsonEmployees>FirstName}"/>
                                                <Label text="{jsonEmployees>Country}"/>
                                                <Label text="{jsonEmployees>City}"/>
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </Panel>
                        </HBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
