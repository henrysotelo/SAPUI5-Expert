<mvc:View
    controllerName="logaligroup.employees.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <HBox id="_IDGenHBox1">
                            <Label id="labelEmployees" 
                                   labelFor="inputEmployees" 
                                   text="{i18n>labelEmployees}"
                                   class="sapUiSmallMarggin"/>
                            <Input id="inputEmployees"
                                   maxLength="6" 
                                   width="200px"
                                   class="sapUiSmallMarginEnd"
                                   value="{/EmployeeId}"/>
                            <Label id="labelCountry" 
                                   labelFor="slCountry" 
                                   text="{i18n>labelCountry}"
                                   class="sapUiSmallMargin"
                                   visible="true"/>
                            <Select id="slCountry" 
                                   forceSelection="false" 
                                   visible="true"
                                   selectedKey="{/CountryKey}"
                                   items="{/ListCountry}">
                            <items>
                                <core:Item id="_IDGenItem1" key="{Key}" text="{Text}" />
                            </items>
                        </Select>
                        <Button id="btnFilter" 
                                text="{i18n>btnFilter}"
                                icon="sap-icon://search" 
                                press="onFilter"
                                class="sapUiSmallMarginEnd"/>
                        <Button id="btnClearFilter" 
                                text="{i18n>btnClearFilter}"
                                icon="sap-icon://clear-filter"
                                press="onClearFilter"
                                class="sapUiSmallMarginEnd"/>
                        </HBox>
                        <HBox id="_IDGenHBox2" >
                            <Panel id="_IDGenPanel1">
                                <Table id="tableEmployee" items="{/Employees}">
                                    <columns>
                                     <Column id="_IDGenColumn1">
                                        <header>
                                            <Label id="_labelId1" text="{i18n>tableId}"></Label>
                                        </header>
                                     </Column>
                                     <Column id="_IDGenColumn2">
                                        <header>
                                            <Label id="_labelId2" text="{i18n>tableName}"></Label>
                                        </header>
                                     </Column>
                                     <Column id="_IDGenColumn3">
                                        <header>
                                            <Label id="_labelId3" text="{i18n>tableCountry}"></Label>
                                        </header>
                                     </Column>
                                     <Column id="_IDGenColumn4">
                                        <header>
                                            <Label id="_labelId4" text="{i18n>tableCity}"></Label>
                                        </header>
                                     </Column>
                                    </columns>
                                <items>
                                <ColumnListItem id="_IDItem">
                                    <cells>
                                    <Label text="{EmployeeID}"/>
                                    <Label text="{LastName} {FirstName}"/>
                                    <Label text="{Country}"/>
                                    <Label text="{City}"/>
                                    </cells>
                                </ColumnListItem>
                                </items>
                                </Table>
                            </Panel>
                        </HBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
