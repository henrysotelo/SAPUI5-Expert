<mvc:View controllerName="logaligroup.employees.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f">
    <Page showHeader="true">
        <content>
            <f:FlexibleColumnLayout id="fc1" backgroundDesign="Solid" layout="{jsonLayouts>/ActiveKey}">
                <f:beginColumnPages>
                    <mvc:XMLView id="masterEmployee" viewName="logaligroup.employees.view.MasterEmployee"/>
                </f:beginColumnPages>
                <f:midColumnPages>
                    <mvc:XMLView id="detailEmployee" viewName="logaligroup.employees.view.EmployeeDetails"/>
                </f:midColumnPages>
                <f:endColumnPages>
                    <Page id="_IDGenPage1"></Page>
                </f:endColumnPages>
            </f:FlexibleColumnLayout>
        </content>
        <footer>
            <Toolbar>
                <Label text="{i18n>layouts}"/>
                <Select items="{jsonLayouts>/Layout}" selectedKey="{jsonLayouts>/ActiveKey}">
                    <core:Item key="{jsonLayouts>Key}" text="{jsonLayouts>Text}"></core:Item>
                </Select>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>