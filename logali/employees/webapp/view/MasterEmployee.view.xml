<mvc:View
    controllerName="logaligroup.employees.controller.MasterEmployee"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

                <Page id="page" title="{i18n>title}">
                    <content>
                        <HBox wrap="Wrap" id="_IDGenHBox1">
                            <Label id="labelEmployees" 
                                   labelFor="inputEmployees" 
                                   text="{i18n>labelEmployees}"
                                   class="sapUiSmallMargin"/>
                            <Input id="inputEmployee" value="{jsonCountry>/EmployeeId}"
                                   maxLength="6" 
                                   width="200px"
                                   class="sapUiSmallMarginEnd"
                                   />
                            <Label id="labelCountry" 
                                   labelFor="slCountry" 
                                   text="{i18n>labelCountry}"
                                   class="sapUiSmallMargin"
                                   visible="false"/>
                            <Select id="slCountry"
                                   selectedKey="{jsonCountry>/CountryKey}"
                                   items="{jsonCountry>/ListCountry}"
                                   forceSelection="false"
                                   visible="true">
                            <items>
                                <core:Item id="_IDGenItem1" key="{jsonCountry>Key}" text="{jsonCountry>Text}" />
                            </items>
                        </Select>
                        <Button id="btnFilter" 
                                text="{i18n>btnFilter}"
                                icon="sap-icon://search" 
                                press="onFilter"
                                class="sapUiSmallMarginEnd"/>
                        <Button id="btnClearFilter" 
                                text="{i18n>btnClearFilter}"
                                icon="sap-icon://clear-filter"
                                press="onClearFilter"
                                class="sapUiSmallMarginEnd"/>
                        </HBox>
                        <core:Fragment fragmentName="logaligroup.employees.fragment.TableEmployee"
                                       type="XML" />
                    </content>
                </Page>
</mvc:View>
